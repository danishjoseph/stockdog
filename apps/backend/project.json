{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "webpackConfig": "{projectRoot}/webpack.config.js",
        "outputPath": "dist/{projectRoot}"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "{projectName}:build"
      }
    },
    "typeorm-migration-generate": {
      "command": "npx typeorm migration:generate -d dist/{projectRoot}/src/database/data-source.js {projectRoot}/src/database/migrations/{args.name}"
    },
    "typeorm-migration-run": {
      "dependsOn": ["build"],
      "command": "npx typeorm migration:run -d dist/{projectRoot}/src/database/data-source.js"
    },
    "typeorm-migration-revert": {
      "dependsOn": ["build"],
      "command": "npx typeorm migration:revert -d dist/{projectRoot}/src/database/data-source.js"
    }
  }
}
