{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "main": "apps/backend/src/main.ts",
        "assets": ["apps/backend/database/**"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/backend"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "collectCoverage": true,
        "passWithNoTests": true
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "coverageReporters": ["text-summary"]
        },
        "production": {
          "ci": true,
          "coverageReporters": ["html"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      }
    },
    "typeorm-migration-generate": {
      "command": "npx typeorm migration:generate -d dist/{projectRoot}/src/database/data-source.js {projectRoot}/src/database/migrations/{args.name}"
    },
    "typeorm-migration-run": {
      "dependsOn": ["build"],
      "command": "npx typeorm migration:run -d dist/{projectRoot}/src/database/data-source.js"
    },
    "typeorm-migration-revert": {
      "dependsOn": ["build"],
      "command": "npx typeorm migration:revert -d dist/{projectRoot}/src/database/data-source.js"
    }
  }
}
